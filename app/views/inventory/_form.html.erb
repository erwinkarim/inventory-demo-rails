<div>
	<hr />
	<p>Create/Update Form</p>
	<%= form_with model: @inventory do |f| %>
		<%= f.error_messages %>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :desc %>
			<%= f.text_field :desc, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :price %>
			<%= f.number_field :price, :step => '0.01', class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :picture %>
			<%= f.text_field :picture, class: 'form-control' %>
		</div>
		<%= f.submit class: 'btn btn-primary mt-2', data: { turbo_frame: '_top' } %>
	<% end %>
</div>